{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "SetBucketName": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "GitlabBucket" }, "" ] }
      ]
    }
  },
  "Description": "This template sets up the S3 Bucket used by a GitLab instance.",
  "Outputs": {
    "GitlabBucketArn": {
      "Description": "Gitlab S3 Bucket ARN.",
      "Export": { "Name": { "Fn::Sub": "${AWS::StackName}-BucketArn" } },
      "Value": { "Fn::GetAtt": [ "GitlabS3Bucket", "Arn" ] }
    },
    "GitlabBucketName": {
      "Description": "Gitlab S3 Bucket Name.",
      "Export": { "Name": { "Fn::Sub": "${AWS::StackName}-BucketName" } },
      "Value": { "Ref": "GitlabS3Bucket" }
    }
  },
  "Parameters": {
    "GitlabBucket": {
      "AllowedPattern": "^[a-zA-Z][a-zA-Z0-9-]*[a-zA-Z0-9]*$|^$",
      "Description": "S3 Bucket to host GitLab content.",
      "Type": "String"
    }
  },
  "Resources": {
    "GitlabS3Bucket": {
      "Properties": {
        "AccessControl": "BucketOwnerFullControl",
        "BucketName": {
          "Fn::If": [
            "SetBucketName",
            { "Ref": "GitlabBucket" },
            { "Ref": "AWS::NoValue" }
          ]
        }
      },
      "Type": "AWS::S3::Bucket"
    }
  }
}
